{
  "extends": "./node_modules/expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native", // Keep this for React Native JSX transformations
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["jest", "react", "react-native", "react-navigation"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".", // Keep base URL for path resolution
    "paths": {
      "@/*": ["./*"], // Alias for entire project
      "@/utils/*": ["./src/utils/*"], // Specific alias for utilities
      "@/hooks/*": ["./hooks/*"] // Specific alias for hooks
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": ["node_modules"]
}
